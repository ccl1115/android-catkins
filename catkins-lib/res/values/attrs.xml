<resources>
    <declare-styleable name="FlipperLayout">
        <attr name="content"
              format="integer"/>
        <attr name="head"
              format="integer"/>
        <attr name="handle"
              format="integer"/>
    </declare-styleable>

    <declare-styleable name="Flip3DLayout">
        <attr name="from"
              format="integer"/>
        <attr name="to"
              format="integer"/>
    </declare-styleable>

    <declare-styleable name="Indicator">
        <attr name="spacing"
              format="dimension"/>
        <attr name="drawable"
              format="reference"/>
        <attr name="selector"
              format="reference"/>
        <attr name="autoHide"
              format="boolean"/>
        <attr name="count"
              format="integer"/>
    </declare-styleable>

    <declare-styleable name="HorizontalTranslateLayout">
        <attr name="left_offset"
              format="dimension"/>
        <attr name="right_offset"
              format="dimension"/>
        <attr name="track"
              format="string"/>
        <attr name="tap_back_area"
              format="string"/>
    </declare-styleable>

    <declare-styleable name="RefresherView">
        <attr name="direction"
              format="string"/>
        <attr name="max_height"
              format="dimension"/>
        <attr name="threshold_height"
              format="dimension"/>
        <attr name="refresher_head"
              format="integer"/>
        <attr name="refresher_content"
              format="integer"/>
        <attr name="empty_view"
              format="integer"/>
    </declare-styleable>
</resources>
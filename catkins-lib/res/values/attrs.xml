<resources>

    <attr name="background" format="color"/>

    <declare-styleable name="FlipperLayout">
        <attr name="content" format="integer"/>
        <attr name="head" format="integer"/>
        <attr name="handle" format="integer"/>
    </declare-styleable>

    <declare-styleable name="Flip3DLayout">
        <attr name="from" format="integer"/>
        <attr name="to" format="integer"/>
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="spacing" format="dimension"/>
        <attr name="drawable" format="reference"/>
        <attr name="selector" format="reference"/>
        <attr name="autoHide" format="boolean"/>
        <attr name="count" format="integer"/>
    </declare-styleable>

    <declare-styleable name="HorizontalTranslateLayout">
        <attr name="leftOffset" format="dimension"/>
        <attr name="rightOffset" format="dimension"/>
        <attr name="leftWidth" format="dimension"/>
        <attr name="rightWidth" format="dimension"/>
        <attr name="track" format="string"/>
        <attr name="tapBack" format="string"/>
        <attr name="background"/>
    </declare-styleable>

    <declare-styleable name="VerticalTranslateLayout">
        <attr name="topOffset" format="dimension"/>
        <attr name="bottomOffset" format="dimension"/>
        <attr name="topHeight" format="dimension"/>
        <attr name="bottomHeight" format="dimension"/>
        <attr name="track"/>
        <attr name="tapBack"/>
        <attr name="background"/>
    </declare-styleable>

    <declare-styleable name="RefresherView">
        <attr name="direction" format="string"/>
        <attr name="max_height" format="dimension"/>
        <attr name="threshold_height" format="dimension"/>
        <attr name="refresher_head" format="integer"/>
        <attr name="refresher_content" format="integer"/>
        <attr name="empty_view" format="integer"/>
    </declare-styleable>

    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension"/>
        <attr name="android:divider"/>
        <attr name="android:requiresFadingEdge"/>
        <attr name="android:fadingEdgeLength"/>
    </declare-styleable>
</resources>
